<%- include('./header.partials.ejs') %>
<main>
  <h1>Editar um item</h1>
  <form id="formulario" action="/editarItem/<%-data.id%>" method="post">
    <div>
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" value="<%= data ? data.name : '' %>" required>
    </div>
    <div>
      <label for="quantidade">Quantidade:</label>
      <input type="number" id="quantidade" name="quantidade" value="<%= data ? data.quantidade : '' %>" required>
    </div>
    <!-- <div>
      <label for="data-de-validade">Data de Validade:</label>
      <input type="date" id="data-de-validade" name="data-de-validade" value="<%= data ? data['data-de-validade'] : '' %>">
    </div> -->
    <button type="submit">Editar</button>
  </form>
</main>
